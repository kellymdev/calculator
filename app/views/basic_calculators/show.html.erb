<h2>Calculator</h2>

<%= form_for [@calculator, @calculation] do |f| %>
  <%= f.text_field(:equation) %>
  <%= f.submit('Calculate') %>
  <%= button_tag('Clear', class: 'clear') %>
<% end %>

<div class="calculator-buttons">
  <%= button_tag('0', class: '0') %>

  <% number_buttons.each do |button| %>
    <%= button %>
  <% end %>
</div>

<h2>Calculators</h2>

<%= form_for(@calculator) do |f| %>
  <%= f.submit 'New Calculator' %>
<% end %>

<table>
  <thead>
    <tr>
      <td>Calculator id</td>
      <td>Previous calculation</td>
      <td>Previous answer</td>
      <td></td>
    </tr>
  </thead>

  <tbody>
    <% @calculators.each do |calculator| %>
      <tr>
        <td><%= calculator.id %></td>
        <td><%= calculator.previous_calculation&.equation %></td>
        <td><%= calculator.previous_calculation&.answer %></td>
        <td><%= link_to('Show', basic_calculator_path(calculator)) %></td>
      </tr>
    <% end %>
  </tbody>